{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",               // This avoids all ESM weirdness
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "baseUrl": ".",                     // Optional
      "paths": {
        "@graphrunnerds/*": ["packages/*"]
      }
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  